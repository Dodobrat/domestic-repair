<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="Something went wrong">
    <meta name="author" content="Deyan Bozhilov">
    <title>Dashboard</title>
    <script src="https://kit.fontawesome.com/0782d985f5.js" crossorigin="anonymous"></script>
    <link href="../style.css" type="text/css" rel="stylesheet"/>
</head>
<body>
<nav class="navbar">
    <div class="container nav-container">
        <a class="nav-title" href="/tech/dashboard">Domestic Repair</a>
        <ul>
            <li>
                {{#if tech.user}}
                    <span class="badge">Technician</span>
                    Hi, {{tech.user}}
                {{/if}}
            </li>
            <a href="/tech/logout">
                <li>
                    <i class="fas fa-sign-out-alt"></i> Logout
                </li>
            </a>
        </ul>
    </div>
</nav>
<div class="container">
    {{#if success}}
        <p class="success">{{success}}</p>
    {{/if}}
    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}
    <div class="hero-section">
        <h2 class="title">Dashboard</h2>
    </div>
    <div class="job-list">
        <p class="job-list-title"><i class="fas fa-clipboard-list"></i> all jobs</p>
        {{#each jobs}}
            <div class="job-item">
                <a href="/tech/report/{{id}}">
                    <span>{{desc}}</span>
                    <small>
                        <span class="secondary">{{appType}}</span> |
                        <span class="secondary">{{appAge}} years</span> |
                        <span class="secondary">{{appMan}}</span>
                    </small>
                </a>
            <button class="completed">
                Completed:
                {{#if completed}}
                    <i class="fas fa-thumbs-up"></i>
                {{else}}
                    <a href="/tech/check/{{id}}">
                        <i class="far fa-thumbs-up"></i>
                    </a>
                {{/if}}
                </button>
            </div>
        {{/each}}
    </div>
</div>
</body>
</html>
